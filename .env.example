# Environment Configuration Template
# Copy this file to .env and update with your values

# ============================================
# Database Configuration
# ============================================
# Option 1: Local PostgreSQL
POSTGRES_DB=education_content
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/education_content

# Option 2: Supabase (Recommended for production)
# Get from: https://app.supabase.com/project/_/settings/database
# POSTGRES_USER=postgres.your_project_ref
# POSTGRES_PASSWORD=your_supabase_password
# POSTGRES_HOST=aws-0-region.pooler.supabase.com
# POSTGRES_PORT=5432
# DATABASE_URL=postgresql://postgres.your_ref:password@aws-0-region.pooler.supabase.com:5432/postgres

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================
# Supabase Configuration (if using Supabase)
# ============================================
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your_anon_public_key_here

# ============================================
# Flask API Configuration
# ============================================
FLASK_PORT=5000
FLASK_DEBUG=false
FLASK_SECRET_KEY=your_secret_key_here_CHANGEME

# ============================================
# FastAPI Configuration
# ============================================
FASTAPI_PORT=8000

# JWT Authentication
JWT_SECRET_KEY=generate_random_secret_key_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Hugging Face API (Optional - only for cloud inference)
# ============================================
# Get your API key from: https://huggingface.co/settings/tokens
# Leave empty if running models locally (recommended)
HUGGINGFACE_API_KEY=

# ============================================
# Model Configuration
# ============================================
# Text Simplification Model
FLANT5_MODEL_ID=google/flan-t5-base

# Translation Model
INDICTRANS2_MODEL_ID=ai4bharat/indictrans2-en-indic-1B

# Validation Model
BERT_MODEL_ID=bert-base-multilingual-cased

# Text-to-Speech Model
VITS_MODEL_ID=facebook/mms-tts-hin

# ============================================
# Bhashini TTS API (Optional)
# ============================================
# Get your API key from: https://bhashini.gov.in/
BHASHINI_API_KEY=your_bhashini_api_key_here
BHASHINI_API_URL=https://dhruva-api.bhashini.gov.in/services/inference/pipeline

# ============================================
# Storage Configuration
# ============================================
AUDIO_STORAGE_PATH=./data/audio
CONTENT_CACHE_PATH=./data/cache

# ============================================
# Redis Configuration
# ============================================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# ============================================
# Celery Configuration
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_CALLS=100
RATE_LIMIT_WINDOW=60

# ============================================
# PgAdmin (Optional - for database management)
# ============================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# ============================================
# Build Configuration
# ============================================
# Options: base, development, production
BUILD_TARGET=development
